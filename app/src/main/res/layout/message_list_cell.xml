<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/msg_b"
    >

    <TextView android:id="@+id/messageid" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="我是消息ID"
        android:textColor="#FFFFFFFF" android:textSize="13dp"
        android:layout_marginLeft="6dp" />

    <TextView android:id="@+id/messagetitle"  android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="我是消息标题"
        android:textColor="#FFFFFFFF" android:textSize="22dp"
        android:layout_below="@+id/messageid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="6dp" />

    <TextView android:id="@+id/messagecontent"  android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="我是消息内容"
        android:textColor="#FFFFFFFF" android:textSize="13dp"
        android:layout_below="@+id/messagetitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/createtime"
        android:layout_alignEnd="@+id/createtime"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="6dp" />

    <TextView android:id="@+id/appid" android:layout_width="wrap_content" android:layout_height="wrap_content"

        android:text="我是appid"
        android:textColor="#FFFFFFFF"
        android:textSize="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp" />

    <TextView android:id="@+id/createtime"  android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="我是消息时间"
        android:textColor="#FFFFFFFF" android:textSize="13dp"
        android:layout_below="@+id/appid"
        android:layout_alignLeft="@+id/appid"
        android:layout_alignStart="@+id/appid" />

</RelativeLayout>